<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="450.0" minWidth="350.0" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="application.SampleController" stylesheets="@login.css">
   <children>
      <Label layoutX="150.0" layoutY="40.0" text="Giriş" styleClass="title">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <TextField fx:id="UsernameText" layoutX="103.0" layoutY="114.0" styleClass="text-field"/>
      <PasswordField fx:id="PasswordText" layoutX="103.0" layoutY="187.0" styleClass="password-field"/>
      <Button fx:id="LoginButton" layoutX="130.0" layoutY="280.0" mnemonicParsing="false" onAction="#LoginButtonClick" prefHeight="31.0" prefWidth="91.0" text="Giriş" styleClass="button"/>
      <Button fx:id="RegisterButton" layoutX="130.0" layoutY="341.0" mnemonicParsing="false" onAction="#RegisterButtonClick" prefHeight="30.0" prefWidth="91.0" text="Kayıt" styleClass="button"/>
      <Label layoutX="17.0" layoutY="118.0" text="Kullanıcı Adı" styleClass="label">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label layoutX="17.0" layoutY="191.0" text="Şifre" styleClass="label">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="label" layoutX="156.0" layoutY="236.0" styleClass="error-label">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
